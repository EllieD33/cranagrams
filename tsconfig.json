{
  "compilerOptions": {
    "jsx": "react-jsx",  
    "target": "ESNext", 
    "module": "ESNext",  
    "moduleResolution": "node", 
    "esModuleInterop": true,    
    "strict": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "lib": ["dom", "esnext"],
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "setupTests.ts",
    "**/*.test.ts", 
    "**/*.test.tsx",
    "types/**/*.d.ts",
  ]
}
